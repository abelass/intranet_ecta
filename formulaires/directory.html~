<script>
	function dsp_profil(id_auteur) {
		jQuery('#zone_profil').load('spip.php?page=profil_public&id_auteur=' + id_auteur,
						function() {jQuery('#zone_profil').show();jQuery('#zone_resultats').hide();}
		);
		return false;
	}
</script>

